<section id="contact">
    <div class="section-content m-5 rounded">
        <h1 class="section-header">Plan an event with <span class="content-header " data-wow-delay="0.2s"
                data-wow-duration="2s"> Econnect</span></h1>
        <h3 class=" subt">Sign up today!</h3>
    </div>
    <div class="container w-50 shadow-lg round flex-d margin-top-5">
        <div class="row  justify-content-center">
            <div class="contact-section p-1 m-3 w-50 ">

                <form class="signup ">
                    <div class="col-md-12">
                        <div class="form-group ">
                            <label class="subt1" for="first_name">First Name</label>
                            <input type="text" class="form-control shadow-lg" id="firstname-input"
                                placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label class="subt1" for="last_name">Last Name</label>
                            <input type="text" class="form-control shadow-lg" id="lastname-input"
                                placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label class="subt1" for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control shadow-lg" id="email-input"
                                placeholder="Enter Email">
                        </div>
                        <div class="form-group">
                            <label class="subt1" for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control shadow-lg" id="password-input"
                                placeholder="Enter Password">
                        </div>
                        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span> <span class="msg"></span>
                        </div>

                        <button type="submit" class="btn btn-default"><i class="fa fa-sign-in shadow-lg"
                                aria-hidden="true"></i> Signup</button>

                        <br />

                        <a class="link-style" href="/login">‚Üê Already have an account? Log in here</a>
